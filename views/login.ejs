<!DOCTYPE html>
<html>
  <%- include('head.ejs') %>
  <body>
    <%- include('header.ejs')%>
    <form method="post">
      <label for="email">Email</label>
      <input
        type="email"
        id="email"
        name="email"
        value="<%= email %>"
        required
      />

      <label for="password">Password</label>
      <input type="password" id="password" name="password" required />

      <button>Submit</button>
    </form>
    <% if (error) { %>
    <p><%= error %></p>
    <% } %>
  </body>
</html>
